<!--extends layout-->
html
  title Bulletin Homepage
  head
    style
    link(href='css/styling.css', rel='stylesheet')
    link(link href="https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet")
  
block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        
body
  P.p <strong> Our Bulletin Board Homepage </strong>
    ul.ul
      li.li
        a.a(href='/') Home
      li.li
        a.a(href='/feeds') All Posts
       
    h1.h1 <strong> Feel welcome to post your message here </strong>
    
      p.p And share it with us.... 
        .row
  form.col.s12(method='post', action='/posthandler')
    .row
    .p.input-field.col.s12 TITLE of your post
      .input-field.col.s12
        input.input-field.col.s12(type='text', id='title' name='titlepostqr')
    .row
    .p.input-field.col.s12 BODY of your post
      .input-field.col.s12
        input.input-field.col.s12(type='text', id='body', name='bodypostqr')
        |   
        input.tfbutton(type='submit', value='Post this!')
 
          
      h2.h2 
        a.a(href='http://www.insightmeditationcenter.org/books-articles/articles/introduction-to-meditation-transcripts/' target='_blank') get some inspiration 
    script(src='/js/jquery-3.1.1.min.js')
    script(src='/js/autocomplete2.js')

  
